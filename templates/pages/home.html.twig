{% extends'base.html.twig' %}

{% block body %}

    {% block module %}
        <div class="row flex justify-content-around">
            {% for module in lastModules %}
            <div class="col-3">
                <div class="card">
                    <a href="{{ path('module.show', {id: module.id, slug:module.slug}) }}">
                    <div class="card-body">
                        <div class="card-title">
                            <h3>{{ module.titre }}</h3>
                        </div>
                        <div class="card-text">
                            {{ module.contenu |raw}}
                        </div>
                            <br>

                    </div>
                    </a>
                </div>
            </div>
            {% endfor %}
        </div>
    {% endblock %}
{% endblock %}
